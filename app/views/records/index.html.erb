<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin-bottom: 20px;
  }

  th, td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
  }

  th {
    background-color: #f2f2f2;
  }

  .record-title {
    display: inline-block;
    margin-top: 0;
  }

  .record-image {
    float: right;
    margin-left: 10px;
  }
</style>

<h1 class="record-title"><%= @baby.name %>の記録　　　　　　　　　　　　　　　<%= image_tag 'chicks-removebg-preview (3).png', style: 'width: 250px; height: auto;' %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">時刻</th>
      <th scope="col">担当</th>
      <th scope="col">ミルク(cc)</th>
      <th scope="col">おしっこ</th>
      <th scope="col">うんち</th>
      <th scope="col">体温(度)</th>
      <th scope="col">メモ</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.created_at.strftime("%m/%d %H:%M") %></td>
        <td><%= record.user.nickname %></td>
        <td><%= record.milk %></td>
        <td><%= record.oshikko ? "●" : "" %></td>
        <td><%= record.unchi ? "●" : "" %></td>
        <td><%= record.body_temperature %></td>
        <td><%= record.memo %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= link_to "トップに戻る", babies_path, class: "btn btn-primary" %>